# Production Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bookit_db
TESTING=false

# JWT Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production-must-be-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
ENVIRONMENT=production
DEBUG=false
API_V1_STR=/api/v1
PROJECT_NAME=BookIt API
VERSION=1.0.0

# CORS Configuration (JSON array format)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Admin User Configuration (for initial setup)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password-change-this
ADMIN_NAME=System Administrator

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings
DOCS_URL=null  # Disable docs in production
REDOC_URL=null  # Disable redoc in production